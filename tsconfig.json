{
    "compilerOptions": {
        "typeRoots": ["./node_modules/@types", "./node_modules/@jspolicy"],
        "target": "ESNEXT",
        "module": "commonjs",
        "incremental": true,
        "declaration": true,
        "outDir": "./dist",
        "alwaysStrict": true,
        "strict": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "esModuleInterop": true
    },
    "include": [
        "src/**/*"
    ]
}
